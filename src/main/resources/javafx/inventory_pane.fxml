<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafx.Administration.InventoryPane">
    <top>
        <HBox spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="return_btn" mnemonicParsing="false" onAction="#back" prefHeight="64.0" prefWidth="100.0" text="%return">
                    <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                    </HBox.margin>
                </Button>
                <VBox prefHeight="90.0" prefWidth="530.0">
                    <fx:include fx:id="topMenu" source="bar.fxml" />
                    <padding>
                        <Insets bottom="10.0" />
                    </padding>
                </VBox>
            </children>
        </HBox>
    </top>
   <center>
      <ScrollPane BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="boxList" prefHeight="143.0" prefWidth="1272.0">
               <children>
                  <Label text="%personel" />
                  <TextArea fx:id="personel" editable="false" prefHeight="38.0" prefWidth="96.0" style="-fx-border-color: RED;" />
                  <Label text="%disposalDrugs" />
                  <TextArea fx:id="disposal" editable="false" prefHeight="30.0" prefWidth="694.0" style="-fx-border-color: RED;" />
                  <Label text="%orderDrugs" />
                  <TextArea fx:id="orderDrugs" editable="false" prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: RED;" />
                  <Label text="%soldDrugs" />
                  <TextArea fx:id="soldDrugs" editable="false" prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: GREEN;" />
                  <Label text="%visits" />
                  <TextArea fx:id="visits" editable="false" prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: GREEN;" />
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <HBox prefHeight="79.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="127.0" prefWidth="694.0" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#add" prefHeight="26.0" prefWidth="134.0" text="%add" />
                  <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="135.0" text="%cancel" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="1482.0" spacing="20.0">
               <children>
                  <TextField fx:id="descript" promptText="%descript" />
                  <TextField fx:id="money" promptText="%money" />
               </children>
            </VBox>
         </children>
      </HBox>
   </bottom>
</BorderPane>
